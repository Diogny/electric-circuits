{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"noImplicitAny": true,
		"suppressImplicitAnyIndexErrors": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"strictNullChecks": true,
		"sourceMap": true,
		"removeComments": false,
		"noEmitOnError": true,
		"outDir": "./dist/js",
		"baseUrl": ".",
		"paths": {
			"src/*": [
				"src/*"
			],
			"*": [
				"node_modules/*"
			]
		}
	},
	"include": [
		"src/**/*"
	]
}